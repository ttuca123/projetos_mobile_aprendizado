<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.android.hellonotification.MainActivity">

    <TextView
        android:text="Exemplo de notificações"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Notificação Simples"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickNotificacaoSimples"/>

    <Button
        android:text="Notificação Heads Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickNotificacaoHeadsUp"/>

    <Button
        android:text="Notificação Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickNotificacaoBig"/>


    <Button
        android:text="Notificação com Ação"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickNotificacaoComAcao"/>



</LinearLayout>
